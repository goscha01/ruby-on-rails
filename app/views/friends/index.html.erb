
<div id="friends">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User ID</th>
      </tr>
    </thead>

    <tbody>
     <% @friends.each do |friend| %>
      <% if friend.user == current_user %>

        <tr>
          <td>
          <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td> 
        <td><%= link_to 'Show', friend %></td>
   
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Delete', friend, method: :destroy, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
  
        </tr>

      <% end %>
   </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>


